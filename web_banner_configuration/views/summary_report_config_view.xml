<odoo>
    <data>
        <!-- summary.report.config -->
        <record id="summary_report_config_tree" model="ir.ui.view">
            <field name="name">summary.report.config.tree</field>
            <field name="model">summary.report.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="priority" widget="handle"/>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="domain"/>
                   <!--  <field name="icon"/>
                    <field name="bg_color"/>
                    <field name="bg_image"/>
                    <field name="bg_option"/>
                    <field name="icon"/>
                    <field name="col_size"/>
                    <field name="max_height"/> -->
                    <field name="active"/>
                    <field name="template_id"/>
                </tree>
            </field>
        </record>

        <record id="summary_report_config_form" model="ir.ui.view">
            <field name="name">summary.report.config.form</field>
            <field name="model">summary.report.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Display info">
                                <field name="name"/>
                                <!-- <field name="priority"/> -->
                                <field name="model_id" options="{'no_create': True}"/>
                                <field name="model_name" invisible="1"/>
                                <field name="domain" widget="domain" options="{'model': 'model_name'}"/>
                            </group>
                            <group string="Range date">
                                <field name="date_range_field_id" options="{'no_create': True}"/>
                                <field name="date_range_type"/>
                                <field name="date_domain" widget="domain" options="{'model': 'model_name'}"/>
                                <field name="active"/>
                            </group>
                            <!-- <group>
                                <field name="icon"/>
                                <field name="bg_option"/>
                                <field name="bg_color" attrs="{'invisible':[('bg_option','!=','color')]}" />
                                <field name="bg_image" attrs="{'invisible':[('bg_option','!=','image')]}" widget="image"/>
                            </group> -->
                            <group string="Template &amp; access">
                                <field name="col_size"/>
                                <field name="max_height"/>
                                <field name="template_id" context="{'default_is_banner_template': 1,'summary_report_config':active,'ui_view_in_web_banner':1}" options="{'no_create': True}" domain="[('is_banner_template','=', True)]"/>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group string="Preview">
                            <field name="table_html" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Configuration Line">
                                <field name="line_ids"  context="{'default_model_id':model_id, 'default_model_name':model_name}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="model_id"/>
                                        <field name="field_id"/>
                                        <field name="domain"/>
                                        <field name="date_domain"/>
                                        <field name="method"/>
                                        <field name="digits"/>
                                        <field name="currency_id"/>
                                        <!-- <field name="value"/> -->
                                        <field name="value_char"/>
                                        <field name="count"/>
                                   
                                    </tree>
                                </field>
                            </page>

                            <!-- <page string="Table HTML">
                                <field name="table_html"/>
                            </page> -->
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- summary.report.config.line -->
        <record id="summary_report_config_line_form" model="ir.ui.view">
            <field name="name">summary.report.config.line.form</field>
            <field name="model">summary.report.config.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="model_id" options="{'no_create': True}"/>
                                <field name="field_id" options="{'no_create': True}"/>
                                <field name="model_name" invisible="1"/>
                                <field name="domain" widget="domain" options="{'model': 'model_name'}"/>
                            </group>
                            <group>
                                <field name="date_range_field_id" options="{'no_create': True}"/>
                                <field name="date_range_type"/>
                                <field name="date_domain" widget="domain" options="{'model': 'model_name'}"/>
                            </group>
                            <group>
                                <!-- <field name="sequence"/> -->
                                <field name="method"/>
                                <field name="digits"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="count"/>
                                <field name="value"/>
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="summary_report_config_line_search" model="ir.ui.view">
            <field name="name">summary.report.config.line.search</field>
            <field name="model">summary.report.config.line</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <search string="Search summary_report_config_line">
                    <filter string="Active False" name="active" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <record id="summary_report_config_action" model="ir.actions.act_window">
            <field name="name">Banner Configuration</field>
            <field name="res_model">summary.report.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="summary_report_config_line_search"/>
        </record>

        <!-- <menuitem id="menu_summary_report_config_all" parent="base.menu_administration" name="Summary Report Configuration" sequence="10" groups="web_banner_configuration.group_summary_report_config_user"/>
        <menuitem id="menu_summary_report_config" parent="menu_summary_report_config_all" name="Summary Report Config" action="summary_report_config_action" sequence="10"/> -->


        <menuitem id="summary_report_config_all" name="Banner Configuration" parent="base.menu_administration" sequence="10" groups="web_banner_configuration.group_summary_report_config_user"/>

        <menuitem id="menu_summary_report_config" parent="summary_report_config_all" name="Banner Configuration" action="summary_report_config_action" sequence="10"/>
    </data>
</odoo>